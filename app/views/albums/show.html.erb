<h2 class="text-center"><%= @album.name %>'s Photos(<%= @photos.count %>)</h2>
<%= link_to "Back to Album List", root_path, class: 'pull-right top-10' %>
<hr />

<div class="span12">
  <div class="span10" id="albums-index">
    <% unless @photos.blank? %>
      <%= render @photos %>
    <% else %>
      <div class="span6 offset2 well">
        <h2 class="text-center">Welcome to Scrapbook!</h2>
        <p class="text-center">You don't have any images in this album yet. You can create one by clicking <b>Add</b> button.</p>
      </div>
    <% end %>
  </div>

  <div class="span1">
    <%= link_to content_tag(:i, " Add", class: 'icon-plus'), '#new-photo', class: 'btn btn-success', :'data-toggle' => "modal" %>
  </div>
</div>
<%= render 'photos/new' %>
