<% new_photo = @album.photos.new %>

<div id="new-photo" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">New Photo</h3>
  </div>

  <%= simple_form_for [@album, new_photo] do |f| %>
    <div class="modal-body">
      <%= f.input :image, label: false, input_html: {class: 'filestyle new_album_photo', :'data-input' => 'false', id: "edit-photo-image"}%>

      <div id='uploadPreview' class="offset1"></div>
    </div>

    <div class="modal-footer">
      <button class="btn btn-primary">Save changes</button>
    </div>

  <% end %>

</div>