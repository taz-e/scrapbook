<div class="navbar navbar-fluid-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= link_to "Scrapbook", root_url, class: 'brand' %>

      <ul class="nav pull-right">
        <% if @current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Hi <%= @current_user.first_name || "User" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to content_tag(:i, " Edit Profile",class: 'icon-user'), edit_user_path(@current_user) %></li>
              <li><%= link_to content_tag(:i, " Logout",class: 'icon-off'), logout_url %></li>
            </ul>
          </li>
        <% else %>
          <li class="divider-vertical"></li>
          <li><%= link_to "Signup", signup_url %></li>
          <li class="divider-vertical"></li>
          <li><%= link_to "Login", login_url %></li>
          <li class="divider-vertical"></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>